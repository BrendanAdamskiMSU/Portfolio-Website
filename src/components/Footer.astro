---
const today = new Date();
---
<hr>
<footer>
    <p>Follow me :)</p>
    <ul role="list" class="grid">
        
        <p class="img"><img src="github.png.crdownload"></p>
        <p class="img"><img src="insta.png.crdownload"></p>
        <p class="img"><img src="linkedin.png.crdownload"></p>


    </ul>
	&copy; {today.getFullYear()} adamski
</footer>
<style>
	footer {
		padding: 0%;
		font-size: 60%;
		text-align: left;
		color: rgb(122, 122, 122);
	}
    hr{
        width: 40%;
        border-color: rgb(19, 74, 17);
    }
    ul{
        margin-right:3%;
    }
    .grid {
        display:grid;
        
        grid-template-columns: repeat(auto-fit, minmax(40ch, 1fr));
        text-align: center;
    }
    img {
        width: 16%;
    }
    p{
        text-align: center;
        font-size: x-large;
        font-weight: 400;
        opacity: .5;
        transition: 1s;
    }
    p.img:hover{
        opacity: 1;
        transition: 1s;
    }
</style>